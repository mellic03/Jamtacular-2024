{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "newLine": "LF",
        "sourceMap": false,
        "outDir": "build"
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "node_modules",                          // Exclude the 'node_modules' directory
        "**/*.spec.ts"                           // Exclude test files (if any)
    ]
}